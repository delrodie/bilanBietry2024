<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Rotary Abidjan Bietry{% endblock %}</title>
        <link rel="icon" href="{{ absolute_url(asset('assets/images/T2425FR-Logo-RGB.png')) }}">
        <meta name="keywords" content="rotary, bietry, abidjan"  />
        <meta name="description" content="Je participe au bilan de santé de mon club" />

        {% block meta %}
            <link rel="canonical" href="{{ absolute_url(path('app_home')) }}" />
            <meta property="og:locale" content="fr_FR" />
            <meta property="og:type" content="Item" />
            <meta property="og:title" content="Bilan de santé du Rotary Club Abidjan Bietry" />
            <meta property="og:description" content="Je participe au bilan de santé de mon club" />
            <meta property="og:url" content="{{ absolute_url(path('app_home')) }}" />
            <meta property="og:site_name" content="ROTARY BIETRY" />
            <meta property="og:image" content="{{ absolute_url(asset('assets/images/logo-rab_theme.png')) }}" />
        {% endblock %}
        <link rel="icon" href="">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ absolute_url(asset('assets/css/app.css')) }}">
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const checkboxes = document.querySelectorAll('.form-check-input');
                    document.getElementById('loader').style.display = 'none';

                    checkboxes.forEach(checkbox => {
                        checkbox.addEventListener('change', function () {
                            const choixDiv = this.closest('.choix');
                            if (this.checked) {
                                choixDiv.classList.add('checked');
                            } else {
                                choixDiv.classList.remove('checked');
                            }
                        });
                    });

                    document.getElementById('myForm').addEventListener('submit', function() {
                        document.getElementById('loader').style.display = 'flex';
                        this.querySelector('button[type="submit"]').disabled = true;
                    });
                });
            </script>
        {% endblock %}
    </body>
</html>
